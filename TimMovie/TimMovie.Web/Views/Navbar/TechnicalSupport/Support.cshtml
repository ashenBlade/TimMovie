@{
    Layout = "_Layout";
}

<div class="d-flex flex-column mt-4 chat-page__container">
    <div class="d-flex align-items-center justify-content-end">
        <button class="btn btn-outline-danger" id="disconnectBtnInSupportPage">Отключиться</button>
    </div>
    <div class="d-flex flex-column mt-2 chat-in-page__container">
        <div class="d-flex align-items-center p-3 ps-5 chat-in-page__header">
            <img src="/img/user_photo/5txs0vsz.jpg" class="chat-in-page__user-photo" alt="фото пользователя"/>
            <div class="ms-3">Реально имя</div>
        </div>
        <div class="chat-in-page__body">
        </div>
        <div class="chat-in-page__input d-flex align-items-center">
            <div class="ms-5 me-5 d-flex align-items-center flex-grow-1 h-100">
                <div class="d-flex align-items-center justify-content-center chat-in-page__input__attaching-file">
                    <svg class="chat-in-page__add-file" width="30px" viewBox="0 0 792 792" fill="rgb(187,13,58)">
                        <path d="M544.5,99v495c0,82.021-66.479,148.5-148.5,148.5S247.5,676.021,247.5,594V148.5c0-54.673,44.327-99,99-99
                    				s99,44.327,99,99V594c0,27.349-22.176,49.5-49.5,49.5c-27.349,0-49.5-22.151-49.5-49.5V198H297v396c0,54.673,44.327,99,99,99
                    				s99-44.327,99-99V148.5C495,66.479,428.521,0,346.5,0S198,66.479,198,148.5v470.25C210.202,716.389,295.045,792,396,792
                    				s185.798-75.611,198-173.25V99H544.5z"/>
                    </svg>
                </div>
                <div class="chat-in-page__input__message-container flex-grow-1 ms-2">
                    <textarea type="text" class="w-100 chat-in-page__input__message-input"></textarea>
                </div>
                <div class="align-items-center ms-4">
                    <div class="chat-in-page__input__send-btn align-items-center justify-content-center d-flex" id="chat-in-page__send-message-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
                            <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="/css/Support/chatInPage.css">
}
@section Scripts
{
    <script src="/js/Support/support_page.js"></script>
}
