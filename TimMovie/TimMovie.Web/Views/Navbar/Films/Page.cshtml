                        <path fill-rule="evenodd"
                              d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                    <div class="[ dropdown-filter__value ]">Популярность</div>
                </div>
            </div>
        </div>
        <ul class="[ dropdown-filter__menu ]">
            <div class="[ dropdown-filter__list-item_disabled ]">Сортировать</div>
            <li class="[ dropdown-filter__list-item ] dropdown-filter__list-item_active"
                data-value="@FilmSortingType.Popularity">
                Популярность
            </li>
            <li class="[ dropdown-filter__list-item ]" data-value="@FilmSortingType.Rating">Рейтинг</li>
            <li class="[ dropdown-filter__list-item ]" data-value="@FilmSortingType.ReleaseDate">Дата выхода</li>
            <li class="[ dropdown-filter__list-item ]" data-value="@FilmSortingType.Views">Просмотры</li>
            <li class="[ dropdown-filter__list-item ]" data-value="@FilmSortingType.Title">Название</li>
        </ul>
        <input type="text" class="[ dropdown-filter__input ]" id="sort-type" value="@FilmSortingType.Popularity">
    </div>
</div>
